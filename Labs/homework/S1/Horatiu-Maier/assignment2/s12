#!/bin/bash
# This script replaces all digits in the given files with a specified letter.
# Check if at least two arguments are provided
if [ "$#" -lt 2 ]; then
    echo "Usage: $0 letter file1 [file2 ...]"
    exit 1
fi

letter="$1"
shift  # Remove the first argument, so the rest are filenames

# Loop through each provided file
for file in "$@"; do
    # Check if the file exists and is a regular file
    if [ -f "$file" ]; then 
        # Use sed to replace all digits [0-9] with the given letter
        sed -i "s/[0-9]/$letter/g" "$file"
        echo "Modified $file"
    else
        echo "File $file does not exist or is not a regular file."
    fi
done
